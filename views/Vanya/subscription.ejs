<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Freelancer Dashboard - Subscription</title>
    <link
      rel="stylesheet"
      href="/css/FreelancerD/static_elements/sidebar.css"
    />
    <link rel="stylesheet" href="/css/FreelancerD/subscription_style.css" />
  </head>
  <body>
    <div class="dashboard-wrapper">
      <!-- Sidebar -->
      <%- include('./partials/sidebar', {activePage: 'subscription'}) %>

      <!-- Main Content -->
      <div class="main-content">
        <div class="container">
          <header>
            <h1>Subscription Plans</h1>
            <p>Boost your freelance career with a plan that fits your needs.</p>
          </header>

          <section class="current-plan">
            <div class="plan-info">
              <h2>Your Plan</h2>
              <p>
                <%= subscription.current_plan.name %> - <%=
                subscription.current_plan.description %> (<%=
                subscription.current_plan.price %>) <% if
                (subscription.current_plan.name === 'Free Tier') { %> Upgrade
                for more opportunities! <% } %>
              </p>
            </div>
            <button>Manage Subscription</button>
          </section>

          <!-- Rest of the content -->
          <section class="plan-options">
            <h2>Choose Your Plan</h2>
            <div class="plans">
              <% subscription.available_plans.forEach(plan => { %>
              <div class="plan-card">
                <h3><%= plan.name %></h3>
                <p class="price"><%= plan.price %></p>
                <p><%= plan.description %></p>
                <% if (plan.name === subscription.current_plan.name) { %>
                <button disabled>Current Plan</button>
                <% } else if (plan.name === 'Enterprise') { %>
                <button class="quote-btn">Get a Quote</button>
                <% } else { %>
                <button class="upgrade-btn">Upgrade to <%= plan.name %></button>
                <% } %>
              </div>
              <% }); %>
            </div>
            <label
              ><input type="checkbox" /> Save 20% with yearly billing</label
            >
          </section>

          <section class="payment-details">
            <p>Secure payments powered by Paytm.</p>
            <a href="#">Add/Update Payment Method</a>
          </section>

          <footer>
            <button class="confirm-btn">Confirm Upgrade</button>
          </footer>
        </div>
      </div>
    </div>
  </body>
</html>

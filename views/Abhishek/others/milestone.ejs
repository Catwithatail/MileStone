        <!-- Add/Edit Milestone Modal -->
        <div class="modal-overlay" id="milestoneModal">
          <div class="modal">
            <div class="modal-header">
              <h2 class="modal-title" id="modalTitle">Add New Milestone</h2>
              <button class="close-modal" id="closeModal">×</button>
            </div>
            <div class="modal-body">
              <form id="milestoneForm">
                <input type="hidden" id="milestoneId" />
                <div class="form-group">
                  <label for="deliverable">Deliverable Description</label>
                  <input
                    type="text"
                    id="deliverable"
                    placeholder="eg : Complete feature X"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="deadline">Deadline</label>
                  <input
                    type="text"
                    id="deadline"
                    placeholder="eg : Week 2"
                    required
                  />
                </div>
                <div class="form-row">
                  <div class="form-group">
                    <label for="payment">Payment Amount (₹)</label>
                    <input
                      type="number"
                      id="payment"
                      placeholder="eg : 22500"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="percentage">Percentage (%)</label>
                    <input
                      type="number"
                      id="percentage"
                      placeholder="eg : 20"
                      required
                    />
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="cancel-btn" id="cancelBtn">
                    Cancel
                  </button>
                  <button type="submit" class="save-btn" id="saveBtn">
                    Add Milestone
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <!-- Delete Confirmation Modal -->
        <div class="modal-overlay" id="deleteModal">
          <div class="modal delete-modal">
            <div class="modal-header">
              <h2 class="modal-title">Confirm Deletion</h2>
              <button class="close-modal" id="closeDeleteModal">×</button>
            </div>
            <div class="modal-body">
              <p>Are you sure you want to delete this milestone?</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="cancel-btn" id="cancelDeleteBtn">
                Cancel
              </button>
              <button type="button" class="delete-btn" id="confirmDeleteBtn">
                Delete
              </button>
            </div>
          </div>
        </div>

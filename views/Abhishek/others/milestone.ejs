  <body>
    <div class="dashboard-wrapper">
      <%- include('../partials/sidebar', { user: user, activePage:
      'transaction_history' }) %>
      <div class="main-content">
        <div class="container">
          <div class="header">
            <h1 class="title">Payments & Milestones for this Job</h1>
            <button class="add-button" id="addMilestoneBtn">
              <svg
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
              </svg>
              Add Milestone
            </button>
          </div>
          <div class="progress-card">
            <div class="progress-section">
              <div class="progress-header">
                <h3 class="progress-title">Project Completion</h3>
                <span class="progress-percentage" id="completionPercentage"
                  >40%</span
                >
              </div>
              <div class="progress-bar-container">
                <div
                  class="progress-bar"
                  id="completionProgressBar"
                  style="width: 40%"
                ></div>
              </div>
              <div class="progress-labels">
                <span>Not Started</span>
                <span>In Progress</span>
                <span>Completed</span>
              </div>
            </div>
            <div class="progress-section">
              <div class="progress-header">
                <h3 class="progress-title">Payment Progress</h3>
                <span class="progress-amount" id="paymentProgress"
                  >₹62,250 of ₹124,500 (50%)</span
                >
              </div>
              <div class="progress-bar-container">
                <div
                  class="progress-bar"
                  id="paymentProgressBar"
                  style="width: 50%"
                ></div>
              </div>
            </div>
          </div>
          <div class="milestones-container" id="milestonesContainer">

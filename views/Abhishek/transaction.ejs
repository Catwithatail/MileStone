<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sidebar Dashboard</title>
    <link rel="stylesheet" href="/css/EmployerD/sidebar.css" />
    <link rel="stylesheet" href="/css/EmployerD/transaction.css" />
  </head>
  <body>
    <div class="dashboard-wrapper">
      <%- include('partials/sidebar', { user: user, activePage: activePage }) %>
      <div class="main-content">
        <div class="container">
          <h1>Transaction History</h1>
          <div class="filter-container">
            <button class="filter-button active" data-filter="all">
              All Transactions
            </button>
            <button class="filter-button" data-filter="completed">
              Completed
            </button>
            <button class="filter-button" data-filter="pending">Pending</button>
          </div>
          <div class="transactions-grid" id="transactions-container">
            <% transactions.forEach(transaction => { %>
            <div
              class="transaction-card"
              data-status="<%= transaction.status %>"
            >
              <div class="card-header">
                <div class="freelancer-info">
                  <img
                    src="<%= transaction.freelancerAvatar %>"
                    alt="<%= transaction.freelancerName %>"
                    class="avatar"
                  />
                  <div class="freelancer-name">
                    <%= transaction.freelancerName %>
                  </div>
                </div>
                <span class="status-badge status-<%= transaction.status %>">
                  <%= transaction.status === 'completed' ? 'Paid' : 'Pending' %>
                </span>
              </div>
              <div class="card-body">
                <div class="project-title"><%= transaction.projectTitle %></div>
                <div class="amount">
                  â‚¹<%= transaction.amount.toLocaleString() %>
                </div>
                <div class="date">
                  <%= transaction.status === 'completed' ? 'Paid on' : 'Due on'
                  %> <%= transaction.date %>
                </div>
              </div>
              <div class="card-footer">
                <a
                  href="/employerD/transaction-history/milestone/<%= transaction.id %>"
                  ><button class="btn btn-outline">View Details</button></a
                >
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
    <script src="/js/EmployerD/transaction.js"></script>
  </body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log In</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            margin: 0;
            padding: 0;
            overflow: hidden; /* Prevent scrolling when modal is open */
        }

        /* Homepage content (to be blurred) */
        .home-content {
            padding: 20px;
            text-align: center;
            transition: filter 0.3s ease;
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent overlay */
            z-index: 1;
        }

        .modal-content {
            background: #dbdbdb;
            margin: 15% auto;
            padding: 20px;
            width: 350px;
            text-align: center;
            border-radius: 5px;
            position: relative;
        }

        .close {
            position: absolute;
            top: 10px;
            right: 15px;
            font-size: 24px;
            cursor: pointer;
            color: #333;
        }

        .close:hover {
            color: #000;
        }

        .blur {
            filter: blur(5px); /* Blur effect on background */
        }

        input, select {
            width: 100%;
            padding: 10px;
            margin: 8px 0;
            border: 1px solid #dbdbdb;
            border-radius: 5px;
            font-size: 14px;
            background: #f9f9f9;
        }

        .btn {
            width: 100%;
            background-color: maroon;
            color: white;
            border: none;
            padding: 10px;
            border-radius: 5px;
            font-size: 14px;
            cursor: pointer;
            margin-top: 10px;
        }

        .btn:hover {
            background-color: rgb(211, 26, 6);
        }

        .footer {
            margin-top: 10px;
            font-size: 14px;
            color: #8e8e8e;
        }
    </style>
</head>
<body>
    <!-- Include the homepage content to blur it -->
    <div class="home-content">
        <%- include('index') %>
    </div>

    <!-- Modal -->
    <div id="loginModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">Ã—</span>
            <h2>Log In</h2>
            <form id="loginForm" action="/submit" method="POST"> <!-- Adjust action as needed -->
                <input type="text" name="username" placeholder="Username" required>
                <input type="text" name="phone_email" placeholder="Phone Number or Email" required>
                <select name="role" id="role" required>
                    <option value="" disabled selected>Select Role</option>                    
                    <option value="admin">Admin</option>
                    <option value="employer">Employer</option>
                    <option value="freelancer">Freelancer</option>
                </select>
                <input type="password" name="password" placeholder="Password" required>
                <button class="btn" type="submit">Login</button>
            </form>
            <div class="footer">Don't have an account? <a href="/signup">Sign up</a></div>
        </div>
    </div>

    <script>
        // Open modal on page load
        window.onload = function() {
            document.getElementById("loginModal").style.display = "block";
            document.querySelector(".home-content").classList.add("blur");
        };

        function closeModal() {
            document.getElementById("loginModal").style.display = "none";
            document.querySelector(".home-content").classList.remove("blur");
            // Redirect back to homepage
            window.location.href = "/";
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById("loginModal");
            if (event.target == modal) {
                modal.style.display = "none";
                document.querySelector(".home-content").classList.remove("blur");
                window.location.href = "/";
            }
        };
    </script>
</body>
</html>
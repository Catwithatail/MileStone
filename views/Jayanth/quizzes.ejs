<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Skill Quizzes</title>
    <link rel="stylesheet" href="/css/adminD/sidebar.css" />
    <style>
      .main-content {
        padding: 20px;
      }
      .section-title {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
      }
      .btn-add-quiz {
        background-color: #3949ab;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
        display: flex;
        align-items: center;
        text-decoration: none;
        font-weight: 500;
      }
      .btn-add-quiz svg {
        margin-right: 8px;
      }
      .skills-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
      }
      .skill-card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s;
      }
      .skill-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
      }
      .skill-header {
        background-color: #3949ab;
        color: white;
        padding: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .skill-name {
        font-weight: 600;
        font-size: 18px;
        margin: 0;
      }
      .skill-body {
        padding: 15px;
      }
      .skill-info {
        margin-bottom: 15px;
      }
      .skill-stat {
        display: flex;
        align-items: center;
        margin-bottom: 8px;
        color: #555;
      }
      .skill-stat svg {
        margin-right: 8px;
        color: #3949ab;
      }
      .skill-actions {
        display: flex;
        justify-content: space-between;
      }
      .btn-edit {
        background-color: #3949ab;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
      }
      .btn-edit svg {
        margin-right: 5px;
      }
      .btn-delete {
        background-color: #f44336;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 4px;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
      }
      .btn-delete svg {
        margin-right: 5px;
      }
      .search-bar {
        margin-bottom: 20px;
        width: 100%;
      }
      .search-form {
        display: flex;
        align-items: center;
        max-width: 500px;
      }
      .search-input {
        padding: 10px;
        flex: 1;
        border: 1px solid #ddd;
        border-radius: 4px 0 0 4px;
        background-color: #f8f8f8;
        font-size: 14px;
      }
      .search-button {
        padding: 10px;
        background-color: #3949ab;
        border: none;
        border-radius: 0 4px 4px 0;
        cursor: pointer;
      }
      .no-results {
        grid-column: 1 / -1;
        text-align: center;
        padding: 30px;
        background-color: #f8f8f8;
        border-radius: 8px;
        color: #666;
      }
    </style>
  </head>
  <body>
    <div class="dashboard-wrapper">
      <%- include('Partials/sidebar', { user: user, activeSection: 'quizzes' }) %>
      <div class="main-content">
        <section id="quizzes" class="section-content active">
          <div class="section-title">
            <h1>Skill Quizzes</h1>
            <a href="/adminD/quizzes/add" class="btn-add-quiz">
              <svg
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                xmlns="http://www.w3.org/2000/svg"
              >
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
              </svg>
              Add New Skill
            </a>
          </div>
          
          <div class="search-bar">
            <form action="/adminD/quizzes" method="GET" class="search-form">
              <input
                type="text"
                name="q"
                placeholder="Search skills..."
                class="search-input"
                value="<%= searchQuery %>"
              />
              <button type="submit" class="search-button">
                <svg
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="white"
                  stroke-width="2"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <circle cx="11" cy="11" r="8"></circle>
                  <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                </svg>
              </button>
            </form>
          </div>
          
          <div class="skills-container">
            <% if (skills && skills.length > 0) { %>
              <% skills.forEach(skill => { %>
                <div class="skill-card">
                  <div class="skill-header">
                    <h3 class="skill-name"><%= skill.name %></h3>
                  </div>
                  <div class="skill-body">
                    <div class="skill-info">
                      <div class="skill-stat">
                        <svg
                          width="16"
                          height="16"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <path d="M12 20V10" />
                          <path d="M18 20V4" />
                          <path d="M6 20v-4" />
                        </svg>
                        Skill ID: <%= skill.skillId %>
                      </div>
                      <div class="skill-stat">
                        <svg
                          width="16"
                          height="16"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <circle cx="12" cy="12" r="10" />
                          <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3" />
                          <line x1="12" y1="17" x2="12.01" y2="17" />
                        </svg>
                        Questions: <%= skill.questionCount %>
                      </div>
                      <div class="skill-stat">
                        <svg
                          width="16"
                          height="16"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
                          <line x1="16" y1="2" x2="16" y2="6" />
                          <line x1="8" y1="2" x2="8" y2="6" />
                          <line x1="3" y1="10" x2="21" y2="10" />
                        </svg>
                        Created: <%= new Date(skill.createdAt).toLocaleDateString() %>
                      </div>
                    </div>
                    <div class="skill-actions">
                      <!-- <a href="/adminD/quizzes/edit/<%= skill.skillId %>" class="btn-edit">
                        <svg
                          width="16"
                          height="16"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <path d="M20 14.66V20a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h5.34" />
                          <polygon points="18 2 22 6 12 16 8 16 8 12 18 2" />
                        </svg>
                        Edit Quiz
                      </a> -->
                      <button class="btn-delete" data-skill-id="<%= skill.skillId %>" onclick="confirmDelete('<%= skill.skillId %>', '<%= skill.name %>')">
                        <svg
                          width="16"
                          height="16"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <polyline points="3 6 5 6 21 6" />
                          <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
                          <line x1="10" y1="11" x2="10" y2="17" />
                          <line x1="14" y1="11" x2="14" y2="17" />
                        </svg>
                        Delete
                      </button>
                    </div>
                  </div>
                </div>
              <% }); %>
            <% } else { %>
              <div class="no-results">
                <% if (searchQuery) { %>
                  <h3>No skills found matching "<%= searchQuery %>"</h3>
                  <p>Try a different search term or <a href="/adminD/quizzes/add">create a new skill</a>.</p>
                <% } else { %>
                  <h3>No skills found</h3>
                  <p>Get started by <a href="/adminD/quizzes/add">creating your first skill</a>.</p>
                <% } %>
              </div>
            <% } %>
          </div>
        </section>
      </div>
    </div>
    
    <script>
      function confirmDelete(skillId, skillName) {
        if (confirm(`Are you sure you want to delete the skill "${skillName}" and its quiz?`)) {
          fetch(`/adminD/quizzes/${skillId}`, {
            method: 'DELETE',
            headers: {
              'Content-Type': 'application/json'
            }
          })
          .then(response => response.json())
          .then(data => {
            if (data.message) {
              alert(data.message);
              window.location.reload();
            }
          })
          .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while deleting the skill.');
          });
        }
      }
    </script>
  </body>
</html>